
<div class="row users_side_list" id="block_list">
    <div id="custom-search-input">
        <div class="input-group col-xs-12">
            <input type="text" class="search search-query form-control" placeholder="Chercher un utilisateur..." />
        </div>
    </div>
    <div class="dropdown lobby">
        <button class="dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-weixin" aria-hidden="true"></i>
            Changer mon statut
            <span class="caret pull-right"></span>
        </button>
        <ul class="dropdown-menu" id="status_menu" aria-labelledby="dropdownMenu">
            <li data-status="Disponible"><a href="#" class="bg-success" >Disponible</a> </li>
            <li data-status="En partie"><a href="#" class="bg-info" >En partie</a></li>
            <li data-status="Occupé(e)"><a href="#" class="bg-warning" >Occupé(e)</a></li>
        </ul>
    </div>
    <div>
        <ul class="list-unstyled list" id="users_list">
            {{> block_mask_commands}}
            {{> block_mask_challenges}}
            {{#if user}}
                {{#with user}}
                    <div class="bg-primary">
                        {{> block_user }}
                    </div>
                {{/with}}
            {{/if}}
            {{#each onlineUsers }}
                {{> block_user }}
            {{/each}}

        </ul>
    </div>
</div>
