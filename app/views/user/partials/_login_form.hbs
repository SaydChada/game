<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <!-- Div Panel-->
    <div class="panel panel-success">
        <!-- Panel Heading-->
        <div class="panel-heading">
            <div class="panel-title">Inscription</div>
        </div>
        <!-- End panel heading-->
        <!-- Panel body-->
        <div class="panel-body">
            <form role="form" method="post" action="login" class="form-horizontal">
                <!-- Username-->
                <div class="input-group input-username"><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" name="username" placeholder="username" autofocus="" class="form-control"/>
                </div>
                <!-- Password-->
                <p>&nbsp;</p>
                <div class="input-group input-password"><span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" name="password" placeholder="password" class="form-control"/>
                </div>
                <div class="input-group checkbox-remember">
                    <div class="checkbox">
                        <label>
                            <input id="login-remember" type="checkbox" name="remember" value="1"/>Se souvenir de moi
                        </label>
                    </div>
                </div>
                <div class="form-group login-button">
                    <div class="col-sm-12 controls">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </div>
            </form>
            <!-- ENd form-->
        </div>
        <!-- ENd panel body-->
    </div>
    <!-- End panel group-->
</div>
<!-- End col div-->